<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kcuser">
	 <select id="list" >
		SELECT *
		FROM kcuser
	</select>
	
	<insert id="add">
		INSERT into kcuser
		VALUES (#{username},#{password},#{name},#{phone},#{email},#{role})
	</insert>
	
	<update id="update">
		UPDATE kcuser
		SET password=#{password},name=#{name},phone=#{phone},email=#{email},role=#{role}
		WHERE username=#{username}
	</update>
	
	<select id="search" resultType="KCUser">
		SELECT * FROM kcuser
		WHERE username=#{username}
	</select>
</mapper>