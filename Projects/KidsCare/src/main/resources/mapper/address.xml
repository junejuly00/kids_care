<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.address">
	<select id="list">
		SELECT *
		FROM address
	</select>
	
	<insert id="add">
		INSERT into address
		VALUES(#{userid},#{fullAddress},#{province},#{city},#{village})
	</insert>
	
	<update id="update">
		UPDATE Address
		SET name=#{userId},fullAddress=#{fullAddress},#{province},#{city},#{village}
		WHERE userId=#{userId}
	</update>
	
</mapper>