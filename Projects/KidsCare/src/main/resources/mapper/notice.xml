<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="notice">
	<select id="list" resultType="Notice">
		SELECT *
		FROM (SELECT sub.*, ROWNUM rnum FROM 
				(SELECT * FROM notice
		ORDER BY code) sub)
		WHERE rnum BETWEEN (((#{page}-1) * #{perPage})+1) AND (#{page} * #{perPage})
		AND status=0
	</select>
	
	<select id="total" resultType="Integer">
		SELECT COUNT(*) FROM (
		SELECT * FROM notice
		ORDER BY code
		) sub
	</select>
	
		<insert id="add">
	    INSERT into notice
	    VALUES(#{code},#{username},sysdate,#{title},#{contents},0)
	</insert>
	
	<update id="update">
	    UPDATE notice
	    SET username=#{username},title=#{title},contents=#{contents}
	    WHERE code=#{code}
	</update>
	
	<select id="item" resultType="Notice">
		SELECT *
		FROM notice
		WHERE code=#{code}

	</select>
	
	<update id="hide">
		UPDATE notice
		SET status=1
		where code=#{code}
	</update>
	
	<insert id="add_image">
		INSERT INTO noticefile
		VALUES (SEQ_NOTICEID.nextval,#{code},#{filename},#{uuid})
	</insert>
	
</mapper>

